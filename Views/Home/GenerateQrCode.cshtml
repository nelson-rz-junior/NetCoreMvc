@model QRCodeModel
@{
    ViewData["Title"] = "Generate QR Code";
}

<div class="border-bottom mb-3">
    <h3>@ViewData["Title"]</h3>
</div>

<div class="row">
    <div class="col-6">
        <form asp-action="GenerateQrCode" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Url" class="form-control" />
                <label asp-for="Url" class="label-control"></label>
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-outline-primary" value="Generate QR Code" />
            </div>
        </form>
    </div>
    <div class="col-6 text-center">
        @if (!string.IsNullOrWhiteSpace(Model.QrCode))
        {
            <img alt="embedded QR code" src="data:image/png;base64,@Model.QrCode" />
        }
    </div>
</div>
